<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Formulaire" >

    <LinearLayout
        android:layout_width="1150dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="60dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/Saisie_Equipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="ENREGISTRER VOTRE EQUIPE"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <EditText
            android:id="@+id/EditNomClub"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="Entrer le nom de votre club " >

            <requestFocus android:layout_width="wrap_content" />
        </EditText>

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dip"
            android:text="Joueurs :"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="1100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/EditNomJoueur"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="Nom " >

                <requestFocus android:layout_width="wrap_content" />
            </EditText>

            <EditText
                android:id="@+id/EditPrénomJoueur"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="Prénom " >

                <requestFocus />
            </EditText>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:entries="@array/post_arrays"
                android:prompt="@string/post_prompt" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>

</RelativeLayout>